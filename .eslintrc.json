{
  "root": true,
  "extends": ["./node_modules/sanctuary-style/eslint-es3.json"],
  "overrides": [
    {
      "files": ["*.md"],
      "globals": {"Identity": false, "show": false, "type": false},
      "rules": {
        "no-extra-semi": ["off"],
        "no-unused-vars": ["error", {"varsIgnorePattern": "^(Identity|type)$"}]
      }
    },
    {
      "files": ["index.js"],
      "rules": {
        "multiline-comment-style": ["off"]
      }
    }
  ]
}
